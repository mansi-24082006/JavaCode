public class Main {
    static void pattern1(int n) {
        for (int i = n; i>=1; i--) {
            for (int j = 1; j<i+1 ; j++) {
                System.out.print("*");
                }
            System.out.println();
        }
        
    }
    
    public static void main(String[] args) {
        pattern1(4);
    }
}


*******Output
****
***
**
*
